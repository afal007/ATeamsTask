<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="io.github.afal007.ateamstask.controllers.fragment.ContactsFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_contacts"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/my_photo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_contacts_name"
            android:textColor="#d3d3d3"
            android:textSize="28sp"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="31dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_contacts"
            app:layout_constraintStart_toStartOf="@id/iv_contacts"
            app:layout_constraintEnd_toEndOf="@id/iv_contacts"
            app:layout_constraintLeft_toLeftOf="@id/iv_contacts"
            app:layout_constraintRight_toRightOf="@id/iv_contacts"
            app:layout_constraintHorizontal_bias="0.185" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
